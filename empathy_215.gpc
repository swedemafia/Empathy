			if(burstFire[currentProfile] && isAutomatic(currentWeapon[currentProfile])) {
				burstFire[currentProfile] = FALSE;
			}
			// Reset scope
			if(isAutomatic(currentWeapon[currentProfile])) {
				antiRecoilScope = 0;
			} else {
				antiRecoilScope = 3;
			}
			switchProfile(currentProfile);
			return;
