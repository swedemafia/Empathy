	// Auto Lean
	if(varAutoLean && get_ival(button[ads]) && (abs(get_ival(POLAR_LX) / 327) > 25)) {
		if(get_ival(POLAR_LX) < 0) {
			if(leanDirection != button[leanL] || !isAutoLean) {
